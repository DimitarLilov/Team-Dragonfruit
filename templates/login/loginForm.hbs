<form class="form" action='#/login' method="POST">
    <h2 class="glyphicon glyphicon-log-in"> User login</h2>
    <br>
    <br>
    <div class="form-group">
        <label for="username" class="form-control-label">Username</label>
        <input type="text" class="form-control" id="username" name="username" placeholder="Username" required="required">
    </div>
    <div class="form-group">
        <label for="password" class="form-control-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Password" required="required">
    </div>
    <div class="control-group">
        <div class="controls">
            <button class="btn btn-default">Login</button>
            <span id="regSpan" class="nav navbar-nav navbar-right">
        <span id="regSpanText">Don't have an account? </span><a href="#/register"><span class="nav-item glyphicon glyphicon-user"></span> Register</a>
            </span>
        </div>
    </div>
</form>