{{> header}}
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <form class="form" action='#/search/title' method="post">
                <div class="input-group">
                    <div class="input-group-btn search-panel">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            <span id="search_concept">Filter By Title</span> <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#/search/town">Search By Town</a></li>
                            <li><a href="#/search/date">Search By Date</a></li>
                        </ul>
                    </div>
                    <div class="form-group required">
                        <input type="text" class="form-control" name="title" value="{{title}}" placeholder="Search event...">
                    </div>

                    <div class="input-group-btn">
                        <button class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    {{> eventPage}}
</div>
{{> footer}}
