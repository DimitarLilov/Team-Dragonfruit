{{> header}}
<div class="container-fliud">
    <form class="form" action='#/search/name' method="get">
        <div class="col-xs-4">
            <div class="input-group">
                <div class="input-group-btn search-panel">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        <span id="search_concept">Filter by</span> <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#/searchByTown">Search By Town Events</a></li>
                        <li><a href="#/searchByTime">Search By Time Events</a></li>
                    </ul>
                </div>
                <input type="hidden" name="search_param" value="all" id="search_param">
                <input type="text" class="form-control" name="x" placeholder="Search event...">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">
                        <span class="glyphicon glyphicon-search"></span></button>
                    </span>
            </div>
        </div>
    </form>
</div>

{{> footer}}