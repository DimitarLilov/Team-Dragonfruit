{{> header}}
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            {{#if isEmpty}}
                <h1><p>No tickets fot this event</p></h1>
                <a class="btn btn-default" href="#/events/:{{eventId}}">Back</a>
            {{else}}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Select Ticket</h3>
                    </div>
                    <div class="panel-body">
                        <form action="#/events/tickets/:{{eventId}}" id="selectTicketForm" method="post">
                            <fieldset class="form-group">
                                <legend>Tickets</legend>
                                {{#each tickets}}
                                    {{> ticket}}
                                {{else}}
                                    <p>No tickets in database</p>
                                {{/each}}
                            </fieldset>
                            <div class="form-group required">
                                <label class="form-control-label" for="ticketAmount"><span
                                        style="color:black">How Many Tickets?</span></label>
                                <input type="number" id="ticketAmount" name="ticketAmount" class="form-control"
                                       value="1"
                                       required="required"/>
                            </div>
                            <button type="submit" class="btn btn-primary">Buy</button>
                        </form>
                    </div>
                </div>
            {{/ if}}
        </div>
    </div>
</div>
{{> footer}}