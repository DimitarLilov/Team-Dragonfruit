{{> header}}
<div class="container">
    {{#if admin}}
    {{else}}
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators col-sm-6">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="https://webnews.bg/uploads/images/36/7236/307236/768x432.jpg" alt="">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>Дрийм тийм Барселона vs Отбор Стоичков</h3>
                        <p>Стадион "Берое"/ Stadium "Beroe" Стара Загора</p>
                    </div>
                </div>
                <div class="item">
                    <img src="https://cdn-az.allevents.in/banners/1fba1125dfe236d6440513dd2a75a766" alt="">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>LA LA LAND in concert</h3>
                        <p>National Palace of Culture, Hall 1</p>
                    </div>
                </div>
                <div class="item">
                    <img src="https://i.ytimg.com/vi/0NZWB1FzkPI/maxresdefault.jpg" alt="">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>The Voice of Godsmack SULLY ERNA</h3>
                        <p>Sports hall "Arena Armeec" Sofia</p>
                    </div>
                </div>
                <div class="item">
                    <img src="http://www.radiotangra.com/thumbnail.php?pic=2017/06/05/bf63662a150faaca6053c4f87c37929c.jpg&size_h=359&size_w=632&q=100" alt="">
                    <div class="carousel-caption d-none d-md-block">
                        <h3>50 години ЩУРЦИТЕ</h3>
                        <p>Ancient Theatre Plovdiv Пловдив</p>
                    </div>
                </div>
            </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    {{/if}}
</div>

{{> footer}}