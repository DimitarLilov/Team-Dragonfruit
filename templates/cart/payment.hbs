{{> header}}
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="panel panel-primary">
                <div class="panel-heading display-table">
                    <div class="row display-tr">
                        <div class="pull-left">
                            <div class="display-td">
                                <div class='card-type'>
                                    <h1 class="panel-title">PAYMENT OF {{totalPrice}} &euro;</h1>
                                </div>
                            </div>
                        </div>
                        <div class="pull-right">
                            <div class="display-td">
                                <div class='card-type'>
                                    <img src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/169963/Amex.png'>
                                    <img src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/169963/Discover.png'>
                                    <img src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/169963/Visa.png'>
                                    <img src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/169963/MC.png'>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <form action="#/cart/payment" id="payment-form" class='form' method="post">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="form-group required">
                                    <label class="form-control-label" for="cardNumber" style="color:black">CARD NUMBER</label>
                                    <input type="text" id="cardNumber" name="cardNumber" placeholder="Valid Card Number"
                                           class="form-control"
                                           required="required" autofocus/>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-7 col-md-7">
                                <div class="form-group required">
                                    <label class="form-control-label" for="cardExpiry" style="color:black">EXPIRATION</label>
                                    <input type="text" id="cardExpiry" name="cardExpiry" placeholder="MM / YY"
                                           class="form-control"
                                           required="required"/>
                                </div>
                            </div>
                            <div class="col-xs-5 col-md-5 pull-right">
                                <div class="form-group required">
                                    <label class="form-control-label" for="cardCVC" style="color:black">CV CODE</label>
                                    <input type="text" id="cardCVC" name="cardCVC" placeholder="CVC"
                                           class="form-control"
                                           required="required"/>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="form-group required">
                                    <label class="form-control-label" for="couponCode" style="color:black">COUPON CODE</label>
                                    <input type="text" id="couponCode" name="couponCode" class="form-control"
                                           required="required"/>
                                </div>
                            </div>
                        </div>

                        <input type="hidden" name="ticketsCount" value="{{ticketsCount}}">
                        <input type="hidden" name="totalPrice" value="{{totalPrice}}">

                        {{#each tickets}}
                            {{> hiddenTicket}}
                        {{/each}}

                        <div class="control-group">
                            <div class="controls">
                                <button class="subscribe btn btn-success btn-lg btn-block" type="button">
                                    Start Subscription
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{{> footer}}