{{> header}}

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-sm-8 col-xs-8">
            <div class="form-group row">
                <h2 class="display-3">Edit Event</h2>
            </div>
            <br/>
            <form action="#/admin/events/edit/:{{_id}}" id="eventEditForm" method="post">

                <div class="form-group row required">
                    <label class="form-control-label" for="title">Title</label>
                    <input type="text" id="title" name="title" class="form-control" value="{{title}}"
                           required="required"/>
                </div>
                <div class="form-group row required">
                    <label class="form-control-label" for="image">Poster</label>
                    <input type="text" id="image" class="form-control" name="image" value="{{image}}"
                           required="required"/>
                </div>
                <div class="form-group row required">
                    <label class="form-control-label" for="location">Location</label>
                    <input type="text" id="location" class="form-control" name="location" value="{{location}}"
                           required="required"/>
                </div>

                <div class="form-group row required">
                    <label class="form-control-label" for="eventDate">Event Date</label>
                    <input type="date" class="form-control" name="eventDate" id="eventDate" value="{{eventDate}}"/>
                </div>

                <div class="form-group row required">
                    <label class="form-control-label" for="eventTime">Event Time</label>
                    <input type="time" class="form-control" name="eventTime" id="eventTime" value="{{eventTime}}"/>
                </div>

                <div class="form-group row required">
                    <label for="town">Town</label>
                    <select name="town" class="form-control" id="town">
                        {{#select selectTown}}
                            {{> towns}}
                        {{/select}}
                    </select>
                </div>

                <div class="form-group row required">
                    <label class="form-control-label" for="details">Description</label>
                    <textarea class="form-control" name="details" id="details">{{details}}</textarea>
                </div>

                <div class="form-group row required">
                    <label for="sel1">Category</label>
                    <select name="categoryId" class="form-control" id="sel1">
                        {{#select selected}}
                            {{#each categories}}
                                {{> category}}
                            {{/each}}
                        {{/select}}
                    </select>
                </div>

                <br>
                <br>
                <div class="form-group row">
                    <button class="btn btn-default">Edit</button>
                    <a class="btn btn-default" href="#/admin/events">Cancel</a>
                </div>
            </form>

        </div>
    </div>
</div>

{{> footer}}