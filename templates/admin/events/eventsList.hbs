{{> header}}

<div class="container">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <h3 class="headText">Event management</h3>
            <br>
            <form action="#/admin/events" method="post">
                <div>
                    <label class="form-label"></label>
                    <span id="searchForm">
                                <input id="showform" class="form-control" type="text" name="title" value=""/>
                            </span>
                    <span id="searchBtn">
                        <button class="btn btn-default">Find</button>
                            </span>
                </div>
            </form>
            <br>
            <div>
                <a class="btn btn-danger" href="#/admin/events/add">Add event</a>
            </div>
            <table class="table table-striped table-hover">
                <tr>
                    <th>&nbsp;</th>
                    <th>Title</th>
                    <th>Location</th>
                    <th>Details</th>
                    <th>Actions</th>
                </tr>
                {{#each events}}
                    {{> event}}
                {{/each}}
            </table>
        </div>
    </div>
</div>
{{> footer}}