{{> header}}

<div class="container">
    <div class="row">
        <div class="col-lg-10 col-sm-10 col-xs-6">
            <h3 class="headText">Category management</h3>
            <br>
            <div>
                <a class="btn btn-danger" href="#/admin/categories/add">Add category</a>
            </div>
            <table class="table table-striped table-hover">
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
                {{#each categories}}
                    {{> category}}
                {{/each}}
            </table>
        </div>
    </div>
</div>
{{> footer}}