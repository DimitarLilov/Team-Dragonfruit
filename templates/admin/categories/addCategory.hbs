{{> header}}

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-sm-8 col-xs-8">
            <div class="form-group row">
                <h2 class="display-3">Add Category</h2>
            </div>
            <br/>
            <form action="#/admin/categories/add" id="addCategoryForm" method="post">

                <div class="form-group row required">
                    <label class="form-control-label" for="name">Category Name</label>
                    <input type="text" id="name" name="name" class="form-control" required="required"/>
                </div>
                <br>
                <br>
                <div class="form-group row">
                    <button class="btn btn-default">Add</button>
                    <a class="btn btn-default" href="#/admin/categories">Cancel</a>
                </div>
            </form>

        </div>
    </div>
</div>

{{> footer}}