{{> header}}
<div class="container-fliud">
    <div class="wrapper row">
        <div class="preview col-md-6">

            <div class="preview-pic tab-content">
                <div class="tab-pane active"><img src="{{image}}"/></div>
            </div>
        </div>
        <div class="details col-md-6">
            <span>Event:</span>
            <h3 class="product-title">{{title}}</h3>
            <div class="category">
                <span class="category">{{category}}</span>
            </div>
            <p class="product-description">{{details}}</p>
            <!--<h4 class="price">current price: <span>{{price}}</span></h4>-->
            <p class="dateTime"><strong>Date: {{eventDate}}</strong></p>
            <p class="dateTime"><strong>Time: {{eventTime}}</strong></p>
            <h5 class="location">Location:
                <span class="size" data-toggle="tooltip" title="small">{{town}} - {{location}}</span>
            </h5>
            <div class="action">
                <button class="add-to-cart btn btn-default" type="button">Tickets</button>
            </div>
        </div>
    </div>
</div>
{{> footer}}